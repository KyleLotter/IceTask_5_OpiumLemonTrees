<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IceTask_5_LemonTree_Opium_</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IceTask_5_LemonTree_Opium_.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm fancy-navbar shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    Opium Lemon Trees
                </a>
                <button class="navbar-toggler text-white border-0" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link nav-fancy" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-fancy" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-fancy" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .fancy-navbar {
        background: linear-gradient(90deg, #6366f1 0%, #60a5fa 100%);
        border-radius: 0 0 16px 16px;
        box-shadow: 0 4px 24px rgba(60, 72, 88, 0.15);
    }

    /* Brand and nav links */
    .navbar-brand {
        font-size: 1.4rem;
        letter-spacing: 1px;
        text-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .nav-fancy {
        color: #fff !important;
        font-weight: 500;
        transition: color 0.3s ease, transform 0.2s;
        padding: 8px 16px;
        border-radius: 8px;
    }

        .nav-fancy:hover {
            color: #e0e7ff !important;
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
        }

    /* Navbar toggler customization for mobile */
    .navbar-toggler {
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 8px;
    }</style>